  var reportValue = [1,2,3,4,5,6,7,8]; -->
  <!--Header-->
  <%- include('navbar',{user:user}) -%>
  <!--Chart-->
  <canvas id="reportChart" class="m-4 py-3 px-3" style="width:100%; height:60vh"></canvas>
  <script> 
    var canvasElement = document.getElementById("reportChart");
    var reportType = ('<%= reportType %>').split(',')
    var reportValue = '<%= reportValue %>'.split(',')

    var config = {
      type: "bar",
      data: {
        labels: reportType,
        datasets: 
          [{
            label: "Number of reports",
            data: reportValue,
          }]
      }
    };

    var ReportChart = new Chart(canvasElement,config);
    Chart.defaults.font.size = 16;
  </script>
  <!--Footer-->
  <%- include('footer',{user:user}) -%>
</body>
