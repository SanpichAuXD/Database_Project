                            <option value="Sukhothai">Sukhothai</option>
                            <option value="Uttaradit">Uttaradit</option>
                            <option value="Uthai Thani">Uthai Thani</option>
                            <option value="Phayao">Phayao</option>
                            <option value="Krabi">Krabi</option>
                            <option value="Chumphon">Chumphon</option>
                            <option value="Trang">Trang</option>
                            <option value="Nakhon Si Thammarat">Nakhon Si Thammarat</option>
                            <option value="Narathiwat">Narathiwat</option>
                            <option value="Pattani">Pattani</option>
                            <option value="Phangnga">Phangnga</option>
                            <option value="Phatthalung">Phatthalung</option>
                            <option value="Phuket">Phuket</option>
                            <option value="Yala">Yala</option>
                            <option value="Ranong">Ranong</option>
                            <option value="Songkhla">Songkhla</option>
                            <option value="Satun">Satun</option>
                            <option value="Surat Thani">Surat Thani</option>
                        </select>
                    </div>
                    
                </div>
                <div style="padding-top: 1.25rem;">
                    <p>DISTRICT</p>
                    <input type="text" name="district" class="inputFieldForm" required size="30" placeholder="district">
                </div>
                <div style="padding-top: 1.25rem;">
                    <p>SUB-DISTRICT</p>
                    <input type="text" name="subdistrict" class="inputFieldForm" required size="30" placeholder="sub-district">
                </div>
            </div>
            <hr style="margin-top: 1.25rem; ">
            <div class="form-line-2">
                <div style="padding-top: 1.25rem;">
                    <div style="position: relative;">
                        <p>DATE and TIME</p>
                        <input type="datetime-local" name="date" class="inputFieldForm" required size="30">
                    </div>
                </div>
            </div>
            <hr style="margin-top: 1.25rem; ">
            <div class="form-line-2">
                <div style="padding-top: 1.25rem;">
                    <div style="position: relative;">
                        <p>IMAGE</p>
                        <input type="file" class="inputFieldForm" multiple="multiple" name="prob_img" size="30">
                    </div>
                </div>
            </div>
            <hr style="margin-top: 1.25rem; ">

            <div style="padding-top: 1.25rem;">
                <p>DESCRIPTION:</p>
                <textarea type="text" value="" class="input-descript" name="desc" cols="60" rows="3.5" required placeholder="Description"></textarea>
            </div>
            <hr style="margin-top: 1.25rem; ">

            <div style="display: flex; justify-content: flex-end; padding-bottom: 2em;">
                <button class="btn-submit">Submit</button>
            </div>
        </form>
    </div>
    <%- include('footer') -%>
  </body>
</html>
